@model SignInViewModel

@{
    ViewData["Title"] = "Sign in";
}

<section class="sign-in">
    <div class="container">

        <div class="sign-title">
            <h1>Welcome back</h1>
            <div class="no-account">
                <p>Don’t have an account yet?</p>
                <a asp-action="SignUp" asp-controller="Auth">Sign up here</a>
            </div>
        </div>


        <div class="sign-form">
        <form method="post" asp-action="SignIn" asp-controller="Auth">

            <div class="alert">
                @ViewData["StatusMessage"]
            </div>

            <div class="input group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
            </div>

            <div class="input group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>

            <div class="checkbox-group">
                <div class="input-group">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>
            </div>

            <div class="forgot-password">
            <button class="btn-theme" type="submit">Sign In</button>

                <a asp-action="SignUp" asp-controller="Auth">Forgot your password?</a>
                </div>
        </form>
        </div>
        
    </div>
</section>
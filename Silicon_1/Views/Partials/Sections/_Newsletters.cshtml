@model SubscribeViewModel

<section class="newsletters">

    <div class="container">

        <div class="news-title">
            <h2>Don't Want to Miss Anything?</h2>
            <img src="/images/icons/newsletters/arrows.svg" />
        </div>

        <form method="post" asp-action="Subscribe" asp-controller="Home">
            
            <div class="options-title">
                <div class="title">
                    <h4>Sign up for Newsletters</h4> 
                </div>
                
            

            <div class="options">
                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="DailyNewsletter" />
                        <label asp-for="DailyNewsletter"></label>
                    </div>
                </div>
                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="AdvertisingUpdates" />
                        <label asp-for="AdvertisingUpdates"></label>
                    </div>
                </div>
                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="WeekinReview" />
                        <label asp-for="WeekinReview"></label>
                    </div>
                </div>
                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="EventUpdates" />
                        <label asp-for="EventUpdates"></label>
                    </div>
                </div>
                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="StartupsWeekly" />
                        <label asp-for="StartupsWeekly"></label>

                    </div>
                </div>
                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="Podcasts" />
                        <label asp-for="Podcasts"></label>
                    </div>
                </div>
            </div>
            </div>

            <div class="email">
                <div class="input-group">
                    <i class="fa-regular fa-envelope"></i>
                    <input asp-for="Email" />
                    
                </div>
                <button class="subscribe-newsletter btn-standard" type="submit">Subscribe *</button>
            </div>
        </form>

    </div>
</section>
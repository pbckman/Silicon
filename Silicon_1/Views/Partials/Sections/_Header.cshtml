<header>
    <div class="container">
        <a class="logo" asp-action="Home" asp-controller="Default"><img src="~/images/logo/silicon-logo.svg" alt="Silicon" /></a>

        <nav>
            <a asp-action="Home" asp-controller="Default">Overview</a>
            <a asp-action="Home" asp-controller="Default">Features</a>
            <a asp-action="Contact" asp-controller="Default">Contact</a>
        </nav>

        <div class="theme-switch">
            <label for="theme-switch-mode">Light</label>

@{
    var theme = Context.Request.Cookies["theme"] ?? "light";
    var isDarkmode = (theme == "dark") ? true : false;
}


<!DOCTYPE html>
<html lang="sv-se" class="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <title>@ViewData["Title"] - Silicon </title>

</head>
<body>

    <div class="wrapper">
        <partial name="~/Views/Partials/Sections/_Header.cshtml" />

        <section class="account">
            <div class="container">
                <aside>
                    <partial name="~/Views/Account/_AccountProfile.cshtml" />

                    <nav class="account-nav">
                        <a class="btn-account btn-nav @Html.IsActive("Account", "Details")" asp-action="Details" asp-controller="Account"><i class="fa-regular fa-cog"></i>Account Details</a>
                        <a class="btn-account btn-nav @Html.IsActive("Account", "AccountSecurity")" asp-action="AccountSecurity" asp-controller="Account"><i class="fa-regular fa-lock"></i>Security</a>
                        <a class="btn-account btn-nav @Html.IsActive("Auth", "SignOut")" asp-action="SignOut" asp-controller="Auth"><i class="fa-regular fa-arrow-right-from-bracket"></i>Sign Out</a>
                    </nav>
                </aside>
                <main>
                    @RenderBody()
                </main>
            </div>
        </section>

        <partial name="~/Views/Partials/Sections/_Footer.cshtml" />
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_CookieConsent" />
</body>
</html>